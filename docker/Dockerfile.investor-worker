# Investor Worker Dockerfile
FROM backfin/base:latest

# Set specific environment variables
ENV WORKER_TYPE=investor_analysis  
ENV SERVICE_NAME=investor-worker

# Health check specific to Investor worker
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "from workers.start_investor_worker import health_check; health_check()" || exit 1

# Run Investor worker
CMD ["python", "workers/start_investor_worker.py"]