# AI Worker Dockerfile
FROM backfin/base:latest

# Set specific environment variables
ENV WORKER_TYPE=ai_processing
ENV SERVICE_NAME=ai-worker

# Health check specific to AI worker
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "from workers.start_ai_worker import health_check; health_check()" || exit 1

# Run AI worker
CMD ["python", "workers/start_ai_worker.py"]